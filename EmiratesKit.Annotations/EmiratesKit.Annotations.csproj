<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<PackageId>EmiratesKit.Annotations</PackageId>
		<Version>1.1.0</Version>
		<Authors>Akhil P Vijayan</Authors>
		<Description>
			DataAnnotation attributes [EmiratesId], [UaeIban], [UaeTrn],
			[UaeMobile] for UAE document validation.
		</Description>
		<PackageReadmeFile>Readme.annotations.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageIcon>icon.png</PackageIcon>
		<RepositoryUrl>https://github.com/akhilpvijayan/EmiratesKit</RepositoryUrl>
	</PropertyGroup>
	<ItemGroup>
		<ProjectReference Include="..\EmiratesKit.Core\EmiratesKit.Core.csproj" />
		<None Include="..\assets\icon.png" Pack="true" PackagePath="" />
		<None Include="Readme.annotations.md" Pack="true" PackagePath="\" />
	</ItemGroup>
</Project>
